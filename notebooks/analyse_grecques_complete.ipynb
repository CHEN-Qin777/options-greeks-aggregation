# %% Import des modules
import numpy as np
import matplotlib.pyplot as plt

# Pour des résultats reproductibles, on fixe la graine
np.random.seed(42)

# %% Définition des fonctions (extrait des fichiers .py)
def prix_option_europeenne(S, K, T, r, sigma, n, type_='call'):
    dt = T / n
    u = np.exp(sigma * np.sqrt(dt))
    d = 1 / u
    p = (np.exp(r * dt) - d) / (u - d)
    prix_actif = np.zeros(n+1)
    for i in range(n+1):
        prix_actif[i] = S * (u ** (n-i)) * (d ** i)
    if type_ == 'call':
        valeur = np.maximum(prix_actif - K, 0)
    else:
        valeur = np.maximum(K - prix_actif, 0)
    for j in range(n-1, -1, -1):
        for i in range(j+1):
            valeur[i] = np.exp(-r * dt) * (p * valeur[i] + (1-p) * valeur[i+1])
    return valeur[0]

def calculer_grecques(S, K, T, r, sigma, n=100, type_='call', eps=0.01):
    prix = prix_option_europeenne(S, K, T, r, sigma, n, type_)
    prix_up = prix_option_europeenne(S+eps, K, T, r, sigma, n, type_)
    prix_down = prix_option_europeenne(S-eps, K, T, r, sigma, n, type_)
    delta = (prix_up - prix_down) / (2*eps)
    gamma = (prix_up - 2*prix + prix_down) / (eps**2)
    prix_vol_up = prix_option_europeenne(S, K, T, r, sigma+0.01, n, type_)
    vega = (prix_vol_up - prix) / 0.01
    dt_jour = 1/365
    if T > dt_jour:
        prix_t_down = prix_option_europeenne(S, K, T-dt_jour, r, sigma, n, type_)
        theta = (prix_t_down - prix) / dt_jour
    else:
        theta = 0
    prix_r_up = prix_option_europeenne(S, K, T, r+0.01, sigma, n, type_)
    rho = (prix_r_up - prix) / 0.01
    return delta, gamma, vega, theta, rho

# %% Paramètres de base
S = 100.0
K = 100.0
T = 30/365  # 30 jours
r = 0.03
sigma = 0.2
n_pas = 100

# %% Prix du call
prix_call = prix_option_europeenne(S, K, T, r, sigma, n_pas, 'call')
print(f"Prix du call : {prix_call:.4f}")

# %% Grecques du call
delta, gamma, vega, theta, rho = calculer_grecques(S, K, T, r, sigma, n_pas, 'call')
print(f"Delta : {delta:.4f}")
print(f"Gamma : {gamma:.4f}")
print(f"Vega  : {vega:.4f}")
print(f"Theta : {theta:.4f}")
print(f"Rho   : {rho:.4f}")

# %% Agrégation pour un portefeuille (2 calls + 1 put)
print("\n--- Agrégation des Grecques pour un portefeuille ---")
# Grecques du put
delta_p, gamma_p, vega_p, theta_p, rho_p = calculer_grecques(S, K, T, r, sigma, n_pas, 'put')

# Portefeuille : 2 calls + 1 put
q_call = 2
q_put = 1
delta_total = q_call * delta + q_put * delta_p
gamma_total = q_call * gamma + q_put * gamma_p
vega_total = q_call * vega + q_put * vega_p
theta_total = q_call * theta + q_put * theta_p
rho_total = q_call * rho + q_put * rho_p

print(f"Delta total : {delta_total:.4f}")
print(f"Gamma total : {gamma_total:.4f}")
print(f"Vega total  : {vega_total:.4f}")
# On peut aussi afficher Theta et Rho si souhaité

# %% Visualisation : variation de Delta avec le prix du sous-jacent
S_range = np.linspace(80, 120, 50)
deltas_call = [calculer_grecques(s, K, T, r, sigma, n_pas, 'call')[0] for s in S_range]
deltas_put = [calculer_grecques(s, K, T, r, sigma, n_pas, 'put')[0] for s in S_range]

plt.figure(figsize=(10,5))
plt.plot(S_range, deltas_call, label='Delta Call')
plt.plot(S_range, deltas_put, label='Delta Put')
plt.xlabel('Prix du sous-jacent S')
plt.ylabel('Delta')
plt.title('Variation du Delta avec le prix du sous-jacent')
plt.legend()
plt.grid(True)
plt.show()
